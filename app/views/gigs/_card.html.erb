<div class="container my-5 align-items-center">

<div id="div_design">


  <div class="cards">
    <% @gigs.each do |gig| %>
      <div class="parent-div">


        <div id="user_profile_div">
          <div id="title_div">
            <%# <%= cl_image_tag(gig.user.profile_picture.key, class: "avatar") %>
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar"%>
        <h5> <%= gig.user.first_name %> <%= gig.user.last_name %> </h5>
        </div>
        </div>

        <%= image_tag("https://as1.ftcdn.net/v2/jpg/02/05/50/86/1000_F_205508624_vW2g4uq40jCyC59eFgXiTHuDdPvAIiO4.jpg", class: "avatar " )%>
