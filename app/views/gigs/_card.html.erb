      </div>

      <div id="details_col_div">
          <h3><%= link_to gig.name, gig_path(gig) %></h3>
            <p> Category: <%= gig.category %></p>
            <%# <button type="button" class="btn btn-primary" data-mdb-ripple-init>Hire Now</button> %>
      </div>

      </div>
    <% end %>
